extends ../layout/layout.pug
block content
    h2.text-xl.mb-4 Button
    div
        a.text-sm.h-8.px-4.py-1.cursor-pointer.inline-flex.items-center.border.bg-blue-500.text-white.border-blue-600(class="hover:bg-blue-600 focus:ring-2") Primary
        a.text-sm.h-8.px-4.py-1.cursor-pointer.inline-flex.items-center.border.bg-gray-200.text-gray-800.border-gray-400(class="hover:bg-gray-300 focus:ring-2") Secondary
        a.text-sm.h-8.px-4.py-1.cursor-pointer.inline-flex.items-center.border.bg-white.text-gray-800.border-gray-600(class="hover:bg-gray-100 focus:ring-2") Outline
        a.text-sm.h-8.px-4.py-1.cursor-pointer.inline-flex.items-center.border.bg-green-600.text-white.border-green-700(class="hover:bg-green-700 focus:ring-2") Success
        a.text-sm.h-8.px-4.py-1.cursor-pointer.inline-flex.items-center.border.bg-red-600.text-white.border-red-700(class="hover:bg-red-700 focus:ring-2") Danger
        a.text-sm.h-8.px-4.py-1.cursor-pointer.inline-flex.items-center.border.bg-yellow-600.text-white.border-yellow-700(class="hover:bg-yellow-700 focus:ring-2") Warning
