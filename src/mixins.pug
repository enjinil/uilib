//- Typography
mixin heading1
    h1.text-4xl.font-bold.text-slate-900.mb-4
        block 
mixin heading2 
    h2.text-3xl.font-bold.text-slate-900.mb-3
        block 
mixin heading3 
    h3.text-2xl.font-bold.text-slate-900.mb-2
        block 
mixin heading4 
    h4.text-xl.font-bold.text-slate-900.mb-1
        block
mixin title
    span.text-lg.font-semibold.text-slate-800
        block
mixin text 
    p.text-base.text-slate-700
        block
mixin note 
    span.text-sm.text-slate-700
        block
mixin overnote 
    span.text-xs.uppercase.tracking-wide 
        block

mixin link(href)
  a.text-indigo-600.underline.cursor-pointer(href=href, class="hover:text-indigo-700")&attributes(attributes)
    block

//- Card
mixin card 
    .border.border-zinc-200.bg-white&attributes(attributes)
        block
mixin card_header 
    .border-b.border-zinc-200.px-4.py-2
        block
mixin card_body 
    .px-5.py-4
        block
mixin card_footer 
    .border-t.border-zinc-200.px-4.py-2
        block

