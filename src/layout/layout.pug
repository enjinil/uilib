doctype html
html(lang="en")
    include ../includes/head.pug
    body
        header.w-screen.col-span-5.px-4.py-6
            h1
                a(href="/").text-xl.font-bold Tailwind UI Library by enjinil
        section.flex(style="min-width: 1024px")
            nav.pl-4.pr-12
                ul 
                    each val, index in ['accordion','alert','button','card','code','divider','list','stat','table','tag','breadcrumb','link','form', 'row-form','typography']
                        li(class='hover:opacity-50 cursor-pointer capitalize mb-1')
                            a(href='/' + val + '.html')= val
            main.grow.px-4.py-4.bg-stone-50
                block content
